@model CdSamling.Models.Rent

@{
    ViewData["Title"] = "Create";
}

<h1>Lägg till utlåning</h1>

<h4>Utlånade</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RentByName" class="control-label"></label>
                <input asp-for="RentByName" class="form-control" />
                <span asp-validation-for="RentByName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentdDate" class="control-label"></label>
                <input asp-for="RentdDate" class="form-control" />
                <span asp-validation-for="RentdDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CollectionId" class="control-label">Album</label>
                <select asp-for="CollectionId" class ="form-control" asp-items="ViewBag.CollectionId"></select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Lägg till" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Tillbaka till listan</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
